number = @{ ASCII_DIGIT+ }
ident  = @{ (ASCII_ALPHA | "_") ~ ("_" | ASCII_DIGIT | ASCII_ALPHA)* }

infix_op    =  { "+" | "-" | "/" | "*" }
atomic_expr = _{ number | ident | ("(" ~ expr ~ ")") }
expr        =  { atomic_expr ~ infix_op ~ atomic_expr }

WHITESPACE = _{ " " }

program = _{ SOI ~ expr ~ EOI }
