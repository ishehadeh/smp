number = { ASCII_DIGIT+ }

infix_op    = { "+" | "-" | "/" | "*" }
atomic_expr = { number | ("(" ~ expr ~ ")") }
expr        = { atomic_expr ~ infix_op ~ atomic_expr }

WHITESPACE = _{ " " }

// We can't have SOI and EOI on expr directly, because it is used
// recursively (e.g. with parentheses)
program = _{ SOI ~ expr ~ EOI }
